<widget id="extendedsearch" version="2.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WebWorks Application</name>
    <description>Extended Search Sample</description>
    <author email="@timothywindsor" href="http://twitter.com/timothywindsor">Tim Windsor</author>
    <content src="index.html" />
    <icon src="icon.png"/>
    <access origin="*" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <rim:invoke-target id="com.bb.test.extendedsearch">
        <type>APPLICATION</type>
        <filter>
            <action>bb.action.SEARCH.EXTENDED</action>
            <mime-type>application/vnd.bb.search.criteria</mime-type>
        </filter>
    </rim:invoke-target>
</widget>